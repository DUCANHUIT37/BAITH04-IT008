<Window x:Class="Bai03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chương trình Windows Media" 
        Height="650" Width="1000"
        Background="#F0F0F0"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="MenuOpen_Click"/>
                <MenuItem Header="Exit" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="Playlist">
                <MenuItem Header="Add to Playlist" Click="MenuAddToPlaylist_Click"/>
                <MenuItem Header="Show All" Click="MenuShowAll_Click"/>
                <MenuItem Header="Show Favorites Only" Click="MenuShowFavorites_Click"/>
                <MenuItem Header="Clear Playlist" Click="MenuClearPlaylist_Click"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="Black" Margin="5">
                <Grid>
                    <MediaElement x:Name="mediaPlayer" 
                                  LoadedBehavior="Manual"
                                  UnloadedBehavior="Stop"
                                  Stretch="Uniform"
                                  MediaOpened="MediaPlayer_MediaOpened"
                                  MediaEnded="MediaPlayer_MediaEnded"/>
                    <TextBlock x:Name="txtPlaceholder"
                               Text="Chọn File > Open hoặc double-click từ Playlist"
                               Foreground="White"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <Border Grid.Column="1" Background="White" BorderBrush="#0078D4" 
                    BorderThickness="2" Margin="5" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#0078D4" Padding="10">
                        <TextBlock Text="📃 PLAYLIST" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <ListBox Grid.Row="1" x:Name="lstPlaylist"
                             Background="White"
                             BorderThickness="0"
                             MouseDoubleClick="LstPlaylist_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding FileName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Duration}" 
                                                   FontSize="10" 
                                                   Foreground="Gray"/>
                                    </StackPanel>

                                    <Button Grid.Column="1" 
                                            Content="{Binding FavoriteIcon}"
                                            FontSize="16"
                                            Width="30" Height="30"
                                            Margin="5,0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="BtnToggleFavorite_Click"
                                            Tag="{Binding Id}"/>

                                    <Button Grid.Column="2" 
                                            Content="🗑️"
                                            FontSize="14"
                                            Width="30" Height="30"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="BtnDelete_Click"
                                            Tag="{Binding Id}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
        <Border Grid.Row="2" Background="White" BorderBrush="#0078D4" BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="5">
                    <Button x:Name="btnPlay" Content="▶" 
                            Width="40" Height="30"
                            FontSize="14" Click="BtnPlay_Click"
                            Background="#0078D4" Foreground="White"
                            IsEnabled="False"/>
                    <TextBlock Text="Phát" 
                               FontSize="10" 
                               HorizontalAlignment="Center"
                               Margin="0,3,0,0"
                               Foreground="#0078D4"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5">
                    <Button x:Name="btnPause" Content="⏸" 
                            Width="40" Height="30"
                            FontSize="14" Click="BtnPause_Click"
                            Background="#0078D4" Foreground="White"
                            IsEnabled="False"/>
                    <TextBlock Text="Tạm dừng" 
                               FontSize="10" 
                               HorizontalAlignment="Center"
                               Margin="0,3,0,0"
                               Foreground="#0078D4"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="5">
                    <Button x:Name="btnStop" Content="⏹" 
                            Width="40" Height="30"
                            FontSize="14" Click="BtnStop_Click"
                            Background="#0078D4" Foreground="White"
                            IsEnabled="False"/>
                    <TextBlock Text="Trở về" 
                               FontSize="10" 
                               HorizontalAlignment="Center"
                               Margin="0,3,0,0"
                               Foreground="#0078D4"/>
                </StackPanel>
                
                <Grid Grid.Column="3" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Slider x:Name="sliderProgress" Grid.Row="0"
                            VerticalAlignment="Center"
                            Minimum="0" Maximum="100" Value="0"
                            IsEnabled="False"
                            Thumb.DragStarted="SliderProgress_DragStarted"
                            Thumb.DragCompleted="SliderProgress_DragCompleted"/>

                    <Grid Grid.Row="1" Margin="0,2,0,0">
                        <TextBlock x:Name="txtCurrentTime" 
                                   Text="0:00" 
                                   FontSize="10" 
                                   Foreground="#666"
                                   HorizontalAlignment="Left"/>
                        <TextBlock x:Name="txtTotalTime" 
                                   Text="0:00" 
                                   FontSize="10" 
                                   Foreground="#666"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>

                <TextBlock Grid.Column="4" Text="🔊" 
                           FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                <Slider x:Name="sliderVolume" Grid.Column="5" 
                        Width="100" VerticalAlignment="Center" Margin="5,0"
                        Minimum="0" Maximum="1" Value="0.5"
                        ValueChanged="SliderVolume_ValueChanged"/>
            </Grid>
        </Border>
    </Grid>
</Window>