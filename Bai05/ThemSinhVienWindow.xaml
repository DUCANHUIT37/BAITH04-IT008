<Window x:Class="QuanLySinhVien.ThemSinhVienWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Sinh Viên" 
        Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Mã Số Sinh Viên -->
        <TextBlock Grid.Row="0" Grid.Column="0" 
                   Text="Mã Số Sinh Viên" 
                   VerticalAlignment="Center"
                   Margin="0,0,0,15"
                   FontWeight="SemiBold"/>
        <TextBox Grid.Row="0" Grid.Column="1" 
                 x:Name="TxtMaSV"
                 Height="30"
                 Padding="5"
                 Margin="0,0,0,15"/>

        <!-- Tên Sinh Viên -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Tên Sinh Viên" 
                   VerticalAlignment="Center"
                   Margin="0,0,0,15"
                   FontWeight="SemiBold"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 x:Name="TxtTenSV"
                 Height="30"
                 Padding="5"
                 Margin="0,0,0,15"/>

        <!-- Khoa -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Khoa" 
                   VerticalAlignment="Center"
                   Margin="0,0,0,15"
                   FontWeight="SemiBold"/>
        <ComboBox Grid.Row="2" Grid.Column="1" 
                  x:Name="CmbKhoa"
                  Height="30"
                  Margin="0,0,0,15"
                  SelectedIndex="0">
            <ComboBoxItem Content="Công nghệ thông tin"/>
            <ComboBoxItem Content="Kỹ thuật phần mềm"/>
            <ComboBoxItem Content="Hệ thống thông tin"/>
            <ComboBoxItem Content="Kỹ thuật máy tính"/>
            <ComboBoxItem Content="Thương mại điện tử"/>
        </ComboBox>

        <!-- Điểm TB -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Điểm TB" 
                   VerticalAlignment="Center"
                   Margin="0,0,0,15"
                   FontWeight="SemiBold"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 x:Name="TxtDiemTB"
                 Width="100"
                 HorizontalAlignment="Left"
                 Height="30"
                 Padding="5"
                 Margin="0,0,0,15"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="BtnThemMoi" 
                    Content="Thêm Mới" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#28A745"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnThemMoi_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#28A745"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="BtnThoat" 
                    Content="Thoát" 
                    Width="100" 
                    Height="35"
                    Background="#FF6347"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnThoat_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF6347"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E55342"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
